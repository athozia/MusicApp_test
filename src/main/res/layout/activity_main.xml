<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nimitr.musicsix.MainActivity">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="384dp"
        android:layout_height="510dp"
        android:layout_above="@+id/latestAddedSongs"
        android:background="@drawable/blackground"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/cover"
        android:layout_width="200dp"
        android:layout_height="210dp"
        android:layout_centerInParent="true"
        android:background="@drawable/cover"
        tools:layout_editor_absoluteY="32dp"
        tools:layout_editor_absoluteX="87dp" />

    <ImageView
        android:id="@+id/reg"
        android:layout_width="422dp"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_reg"
        tools:layout_editor_absoluteY="380dp"
        tools:layout_editor_absoluteX="-19dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/musicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Kimi no nawa"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteY="252dp"
        tools:layout_editor_absoluteX="132dp" />

    <TextView
        android:id="@+id/musicArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Yourname"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteY="276dp"
        tools:layout_editor_absoluteX="146dp" />

    <ImageView
        android:id="@+id/note1"
        android:layout_width="69dp"
        android:layout_height="73dp"
        android:layout_centerInParent="true"
        android:background="@drawable/n1"
        tools:layout_editor_absoluteY="7dp"
        tools:layout_editor_absoluteX="253dp" />

    <ImageView
        android:id="@+id/note2"
        android:layout_width="122dp"
        android:layout_height="131dp"
        android:layout_centerInParent="true"
        android:background="@drawable/n2"
        tools:layout_editor_absoluteY="176dp"
        tools:layout_editor_absoluteX="35dp" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/play"
        tools:layout_editor_absoluteY="345dp"
        tools:layout_editor_absoluteX="117dp" />

    <ImageButton
        android:id="@+id/forward"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/f1"
        tools:layout_editor_absoluteY="403dp"
        tools:layout_editor_absoluteX="51dp" />

    <ImageButton
        android:id="@+id/backward"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/f2"
        tools:layout_editor_absoluteY="403dp"
        tools:layout_editor_absoluteX="287dp" />

    <ImageButton
        android:id="@+id/replay"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/replay_unselected"
        tools:layout_editor_absoluteY="470dp"
        tools:layout_editor_absoluteX="78dp" />

    <ImageButton
        android:id="@+id/replay"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shuffle_unselected"
        tools:layout_editor_absoluteY="470dp"
        tools:layout_editor_absoluteX="28dp" />


</android.support.constraint.ConstraintLayout>
